<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/decorroom_title"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
         android:key="omni_theme_select_activity"
         android:title="@string/x_theme_select_title"
         android:summary="@string/x_theme_select_summary"
         android:persistent="false" >
         <intent android:action="android.intent.action.MAIN"
                 android:targetPackage="org.omnirom.omnistyle"
                 android:targetClass="org.omnirom.omnistyle.BrowseThemesActivity" />
    </Preference>

    <Preference
         android:key="omni_theme_compose_activity"
         android:title="@string/x_theme_compose_title"
         android:summary="@string/x_theme_compose_summary"
         android:persistent="false" >
         <intent android:action="android.intent.action.MAIN"
                 android:targetPackage="org.omnirom.omnistyle"
                 android:targetClass="org.omnirom.omnistyle.ComposeThemeActivity" />
    </Preference>

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="accent_color"
        android:title="@string/accent_hex_picker"
        android:defaultValue="0xffffff"
        android:persistent="false" />

</PreferenceScreen>


